#include <stdio.h>
#include <math.h>

void main() {

	int n,i;
	float T; //((n*(n + 1)) / 2)
	float Tn=0; //(T + Tn) = sqrt(x)
	double x;

	
	do {
		printf("Pon el numero de interacciones que quieres hacer\n");
		scanf_s("%d", &n);
	} while (n <= 0);

	for (i = 1; i <= n; i++) { 

		T = ((i*(i + 1)) / 2);
		x = (double)Tn + T;
		printf("%.01f\t", sqrt(x));
		Tn = T;
	}
	system("pause");
}
